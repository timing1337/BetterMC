@model LOC.Core.Model.Sales.SalesPackage

<div class="span4">
    <div class="span4">
        <form action="https://www.sandbox.paypal.com/cgi-bin/webscr" method="post">
            <input type="hidden" name="cmd" value="_s-xclick" />
            <input type="hidden" name="hosted_button_id" value=@Model.PaypalButtonId />
            <input type="hidden" name="on1" value="Name" />
            <input type="hidden" name="os1" class="playerName" value="defek7" maxlength="200" />
            <input type="hidden" name="on2" value="Server" />
            <input type="hidden" name="os2" class="server" value="impulse" maxlength="200" />
            <input type="image" class="salesPackageButton" src=@Url.Content(Model.Image) value="Buy Now"/>
        </form>
    </div>
    <div class="span4">
        <h3>@Model.Name</h3>
        <h3>@Model.Price.ToString("$0.00")</h3>
        <p>@Model.Description</p>
    </div>
</div>
